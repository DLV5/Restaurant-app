.background {
    position: absolute;
    width: 100%;
    height: 100%;
    -unity-background-image-tint-color: rgb(221, 221, 221);
}

.text-title {
    transition-duration: 1s;
    left: auto;
    animation: 1s slidein ease;
}

.language-button {
    width: 45%;
    height: 20%;
    transition-duration: 0.2s;
    transition-timing-function: ease-out-sine;
}

.language-button:focus {
    -unity-background-image-tint-color: rgb(164, 164, 164);
    width: 54%;
    height: 24%;
}
